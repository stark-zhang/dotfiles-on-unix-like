{
        "diagnostic.warningSign": "!!",
        "coc.preferences.rootPatterns": [
                ".git",
                ".svn",
                ".project",
                ".github"
        ],
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "clangd.checkUpdates": false,
        "clangd.semanticHighlighting": true,
        "clangd.arguments": [
                "--pretty",
                "-j=12",
                "--pch-storage=memory",
                "--suggest-missing-includes",
                "--cross-file-rename",
                "--background-index"
        ]
}
